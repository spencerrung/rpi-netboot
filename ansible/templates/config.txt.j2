# Raspberry Pi Boot Configuration
# Generated by Ansible for {{ item.hostname }} ({{ item.serial }})
# Do not edit manually - changes will be overwritten

# 64-bit kernel
arm_64bit={{ boot_config.arm_64bit }}

# UART for serial console
enable_uart={{ boot_config.enable_uart }}

# HDMI settings
hdmi_force_hotplug={{ boot_config.hdmi_force_hotplug }}

# Graphics driver - Required for HDMI console to work!
dtoverlay={{ boot_config.dtoverlay }}
max_framebuffers={{ boot_config.max_framebuffers }}

# Device tree
device_tree={{ boot_config.device_tree }}

# Boot kernel with initramfs
kernel={{ boot_config.kernel }}
initramfs {{ boot_config.initramfs }}
cmdline=cmdline.txt
